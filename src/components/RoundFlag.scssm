.Flag {
  width: 3rem;
  height: 3rem;
  transform: scale(.5);

  transform-origin: top left;

  background: url('../assets/flags-sprite.png') no-repeat;

  &.gb {
    background-position: 0 -3456px;
  }

  &.us {
    background-position: 0 -9936px;
  }

  &.eu {
    background-position: 0 -3072px;
  }
}